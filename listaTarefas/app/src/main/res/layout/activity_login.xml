<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f0f9ff"
        tools:context=".telas.MainActivity">

    <TextView
            android:textColor="#2096f8"
            android:textSize="18dp"
            android:layout_margin="36dp"
            android:layout_centerHorizontal="true"
            android:text="TodaApp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    <RelativeLayout
            android:padding="18dp"
            android:background="#ffffff"
            android:layout_margin="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

        <TextView
                android:layout_marginBottom="18dp"
                android:textSize="25dp"
                android:textColor="#2096f8"
                android:layout_centerHorizontal="true"
                android:id="@+id/title_tv"
                android:text="Login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <EditText
                android:layout_below="@id/title_tv"
                android:textColorHint="#b9dffc"
                android:background="@drawable/shape"
                android:inputType="textEmailAddress"
                android:id="@+id/email_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_marginBottom="16dp"
                android:hint="Nome:"/>

        <EditText
                android:textColorHint="#b9dffc"
                android:layout_marginBottom="16dp"
                android:background="@drawable/shape"
                android:inputType="textPassword"
                android:padding="8dp"
                android:id="@+id/senha_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email_et"
                android:hint="Senha:"/>

        <Button
                android:textColor="#ffffff"
                android:layout_marginBottom="16dp"
                android:background="@drawable/shape2"
                android:id="@+id/entrar_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/senha_et"
                android:text="Entrar"/>

        <Button
                android:textColor="#ffffff"
                android:background="@drawable/shape2"
                android:id="@+id/registrar_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/entrar_btn"
                android:text="Register"/>

    </RelativeLayout>

</RelativeLayout>